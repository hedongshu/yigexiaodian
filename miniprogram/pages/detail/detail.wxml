<view>
    <view>
        <view>
            <img-swiper height='400rpx' indicatorDots='{{false}}' swipers='{{goodsInfo.des_imgs}}' />
        </view>
        <view>
            <view class="titile">{{goodsInfo.name}}</view>
            <view class="price">￥{{goodsInfo.price / 100}}</view>
        </view>
        <van-collapse value="{{activeNames}}" bind:change='collapseOnChange'>
            <van-collapse-item title="详细参数" name="1">
                <text>123</text>
                >
            </van-collapse-item>
            <van-collapse-item title="商品详情" name="2">
                <view class="imagesList">
                    <block wx:for="{{goodsInfo.des_imgs}}" wx:key="*this">
                        <image src="{{item}}" mode="widthFix" />
                    </block>
                </view>
                >
            </van-collapse-item>
        </van-collapse>
    </view>
    <!-- 底部 -->
    <van-goods-action>
        <van-goods-action-icon icon="chat-o" open-type='contact' text="客服" />
        <van-goods-action-icon info="{{cartsNum}}" icon="cart-o" text="购物车" bindtap="toCart" />
        <van-goods-action-button data-type='addToCart' text="加入购物车" type="warning" bindtap="onClickButton" />
        <van-goods-action-button data-type='buy' text="立即购买" bindtap="onClickButton" />
    </van-goods-action>
    <!-- 弹出层 -->
    <van-popup show="{{ showPopup }}" position="bottom" bind:close="onClose">
        <view class="popBox">
            <view>
                <image class="pop-img" src="{{goodsInfo.img}}" />
                <view class="pop-info">
                    <view class="van-ellipsis">{{goodsInfo.name}}</view>
                    <text class="pop-price">￥{{goodsInfo.price / 100}}</text>
                </view>
            </view>
            <van-panel title="选择版本">
                <van-radio-group class="pop-version" value="{{ radio }}" bind:change="onRadioChange">
                    <block wx:for="{{goodsInfo.versions}}" wx:key="index">
                        <van-radio style="margin: 6rpx 10rpx" name="{{index}}">{{item}}</van-radio>
                    </block>
                </van-radio-group>
            </van-panel>
            <view>
                <text>购买数量</text>
                <van-stepper style="float: right" value="{{  num }}" bind:change="onChange" />
            </view>
            <view>
                <van-button bind:tap="determine" size='large' type="primary">确定</van-button>
            </view>
        </view>
    </van-popup>
</view>