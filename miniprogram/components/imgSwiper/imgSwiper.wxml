<!-- components/imgSwiper.wxml -->
<view class='swiperContainer'>
    <swiper class="swiper_box" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}" indicator-color="rgba(255, 255, 255, .3)" indicator-active-color="#fff">
        <block wx:for="{{imgUrls}}" wx:key="id">
            <swiper-item>
                <image src="{{item}}" class="slide-image" mode='aspectFill' />
            </swiper-item>
        </block>
    </swiper>
</view>